{
  "$schema": "../../node_modules/@stryker-mutator/core/schema/stryker-schema.json",

  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "!src/**/*.spec.ts",
    "!src/**/*.spec.tsx",
    "!src/**/*.stories.ts",
    "!src/**/*.stories.tsx",
    "!src/**/__snapshots__/**",
    "!src/@types/**"
  ],

  "testRunner": "command",
  "commandRunner": {
    "command": "pnpm test"
  },

  "buildCommand": "tsc --noEmit",
  "tsconfigFile": "tsconfig.json",
  "reporters": ["progress", "clear-text", "html"],
  "coverageAnalysis": "perTest",
  "concurrency": 4,

  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "**/*.stories.*",
    "**/__snapshots__/**",
    "**/*.test.*",
    "**/*.spec.*"
  ],

  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,

  "timeoutMS": 30000,
  "timeoutFactor": 2
}

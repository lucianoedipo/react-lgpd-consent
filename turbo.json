{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [".eslintcache"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "docs:generate": {
      "dependsOn": ["build"],
      "outputs": ["../../docs/**", "../../.turbo/docs-review-summary.md"]
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["build"],
      "outputs": ["../../storybook-static/**"]
    }
  },
  "globalDependencies": [
    "tsconfig.*.json",
    "jest.config.mjs",
    "jest.setup.ts",
    ".eslintrc*",
    "eslint.config.js"
  ]
}

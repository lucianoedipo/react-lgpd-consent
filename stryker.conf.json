{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",

  "mutate": [
    "packages/core/src/**/*.ts",
    "packages/core/src/**/*.tsx",
    "packages/mui/src/**/*.ts",
    "packages/mui/src/**/*.tsx",
    "packages/react-lgpd-consent/src/**/*.ts",
    "packages/react-lgpd-consent/src/**/*.tsx",
    "!packages/**/src/**/*.test.ts",
    "!packages/**/src/**/*.test.tsx",
    "!packages/**/src/**/*.spec.ts",
    "!packages/**/src/**/*.spec.tsx",
    "!packages/**/src/**/*.stories.ts",
    "!packages/**/src/**/*.stories.tsx",
    "!packages/**/src/**/__snapshots__/**",
    "!packages/**/src/@types/**"
  ],

  "testRunner": "command",
  "commandRunner": {
    "command": "pnpm test"
  },

  "buildCommand": "pnpm run type-check",
  "tsconfigFile": "tsconfig.base.json",
  "reporters": ["progress", "clear-text", "html"],
  "coverageAnalysis": "perTest",
  "concurrency": 8,

  "ignorePatterns": [
    "example/**",
    "examples/**",
    "storybook-static/**",
    "packages/**/dist/**",
    "docs/**",
    "packages/**/src/**/*.stories.*",
    "packages/**/src/**/__snapshots__/**",
    "node_modules/**",
    "scripts/**",
    "rfcs/**"
  ],

  "tempDirName": ".stryker-tmp",
  "cleanTempDir": true,

  "timeoutMS": 30000,
  "timeoutFactor": 2
}

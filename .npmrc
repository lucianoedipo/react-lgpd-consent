# Registry padrão do npm
registry=https://registry.npmjs.org/

# Configurações do pnpm
auto-install-peers=true
strict-peer-dependencies=false

# Hoist pattern para garantir que peer deps sejam compartilhadas
shamefully-hoist=true

# Performance
prefer-frozen-lockfile=false

# SSL/TLS - desabilitar verificação SSL (necessário em alguns ambientes corporativos)
# strict-ssl=false
